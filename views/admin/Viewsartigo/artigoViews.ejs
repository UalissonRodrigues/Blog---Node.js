<%- include ('../../../partials/header.ejs') %>
    <%- include ('../../../partials/navbar.ejs') %>
        <hr>
        <div class="container">
            <div class="card">
                <div class="card-header">
                    <h2> Cadastre seu Artigo </h2>
                </div>
                <div class="card-body">
                    <br>
                    <form method="POST" action="/admin/artigo/save">
                        <input class="form-control" type="text" name="title" placeholder="Defina o titulo do Seu Artigo" required>
                        <br>
                        <textarea class="form-control" placeholder="Escreve Seu Artigo" name="body"
                            id="Artigo"> </textarea>
                        <br>
                        <label> Categorias </label>
                        <select name="categoria" class="form-control">
                            <% categoria.forEach((categoria)=> { %>
                                <option value="<%= categoria.id %>"><%= categoria.title %></option>
                                <% }) %>
                        </select>
                        <br>
                        <button class="btn btn-success"> Cadastrar </button>
                    </form>
                </div>
            </div>
        </div>
        <%- include ('../../../partials/footer.ejs') %>
            <script src="/tinymce/tinymce.min.js"></script>
            <script>
                tinymce.init({
                    language: 'pt_BR',
                    selector: "#Artigo",
                    plugins: [
                        'advlist autolink link image lists print preview hr searchreplace wordcount fullscreen insertdatetime media save table paste emoticons'
                    ]
                })
            </script>