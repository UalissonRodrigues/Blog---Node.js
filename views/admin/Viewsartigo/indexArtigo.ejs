<%- include ('../../../partials/header.ejs') %>
    <%- include ('../../../partials/navbar.ejs') %>
        <div class="container">
            <hr>
            <h2>Artigos</h2>
            <a class="btn btn-success" href="/admin/artigo/new"> Criar Novo Artigo </a>
            <hr>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Titulo</th>
                        <th>Slug</th>
                        <th>Categoria</th>
                        <th>Ações</th>
                    </tr>
                </thead>
                <tbody>
                    <% artigos.forEach(artigos=> { %>
                        <tr>
                            <td>
                                <%= artigos.id %>
                            </td>
                            <td>
                                <%= artigos.title %>
                            </td>
                            <td>
                                <%= artigos.slug %>
                            </td>
                            <td>
                                <%= artigos.categoriumId %>
                            </td>
                            <td>Ações</td>
                        </tr>
                        <% }) %>

                </tbody>
            </table>
        </div>
        <%- include ('../../../partials/footer.ejs') %>
            <script>
                function confirmarDelete(event, form) {
                    event.preventDefault(); // Impedi que o formularioa seja submetido
                    var decisao = confirm("Confirma Exclussão da Categoria?");
                    if (decisao) {
                        form.submit();
                    }
                }
            </script>